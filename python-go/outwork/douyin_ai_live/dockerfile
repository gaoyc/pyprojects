# Dockerfile
FROM python:3.10-slim

# 设置时区（可选）
ENV TZ=Asia/Shanghai
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

# 安装依赖
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 复制代码
COPY . .

# 创建音频输出目录
RUN mkdir -p /app/audio

# 暴露Flask端口
EXPOSE 5000

# 启动命令
CMD ["python", "app.py"]